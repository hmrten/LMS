@model IEnumerable<LMS.Models.Schedule>

@{
    ViewBag.Title = "List";
}
<div class="row">
    <div class="col-md-3">
        <div id="sub-menu">
            @Html.Partial("~/Views/Teacher/Schedule/_Nav.cshtml")
        </div>
    </div>
    <div class="col-md-9">
        <h2>Lista alla scheman</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Author.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Group.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Task.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Task.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>